                    <form asp-controller="Profile" asp-action="UpdateImageProfile" method="post" enctype="multipart/form-data">
                        <div class="card mb-4 mb-xl-0">
                            <div class="card-header">Profile Picture</div>
                            <div class="card-body text-center">
                                <div class="img-account-profile mb-2">
                                    <img class="rounded-circle" src="~/images/@ViewBag.customer.Image" alt="">
                                </div>
                                <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                                <input style="padding-bottom:10px" type="file" name="imageFile" id="imageFile" accept=".jpg,.png" onchange="enableUploadButton()" />
                                <button class="btn btn-primary mt-2" type="submit" id="uploadBtn" disabled>Upload new image</button>
                            </div>
                        </div>
                    </form>

                    <style>
                        .img-account-profile img {
                            width: 150px; /* Điều chỉnh kích thước ảnh dựa trên thiết kế của bạn */
                            height: 150px; /* Điều chỉnh kích thước ảnh dựa trên thiết kế của bạn */
                            object-fit: cover; /* Giữ tỷ lệ khung hình */
                            border-radius: 50%; /* Làm cho ảnh thành hình tròn */
                            border: 2px solid #fff; /* Đường viền mỏng màu trắng */
                        }
                    </style>
