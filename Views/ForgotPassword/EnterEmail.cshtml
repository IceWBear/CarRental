@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Forgot Password - Electro Shop </title>
    <link rel="stylesheet" href="~/enteremail_style/css/css-material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/enteremail_style/css/css-style.css">
    <meta name="robots" content="noindex, follow">
</head>
<body style="background-image: url('/enteremail_style/images/car_login.jpg');background-size: cover;background-repeat: no-repeat;background-position: center;background-attachment: fixed">
    <div class="main">
        <div class="container" style="padding-top:20px; width:1070px">
            <div class="signup-content" style="padding-top:40px; padding-bottom:20px; padding-left:40px; padding-right:30px; border-radius:15px">
                <form asp-controller="ForgotPassword" asp-action="ValidateEmail" method="get" class="signin-form">
                    <h2 style="padding-bottom: 20px">Forgot Password </h2>
                    <div>
                        <input type="email" class="form-input" name="email" id="email" placeholder="Enter your email " required="" value="">
                    </div>
                    <div style="color: #ffe200; font-weight:400; font-style:italic; padding-top:10px">@ViewBag.error</div>
                    <div class="form-group" style="padding-left: 200px; padding-top:30px">
                        <input type="submit" name="submit" id="submit" class="form-submit submit" value="RESET PASSWORD">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <style>
        .container {
            margin-top: 120px;
            margin-bottom: 70px;
            width: 1123px;
            padding-top: 135px;
            padding-bottom: 115px;
            background-image: none;
            background-repeat: no-repeat;
            background-size: cover;
            -moz-background-size: cover;
            -webkit-background-size: cover;
            -o-background-size: cover;
            -ms-background-size: cover;
            background-position: center center;
            overflow: hidden;
        }

        .signup-content {
            width: 562px;
            background: rgb(0 0 0 / 54%);
        }
    </style>
    <script src="~/enteremail_style/js/jquery-jquery.min.js"></script>
    <script src="~/enteremail_style/js/4370-js-main.js"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
